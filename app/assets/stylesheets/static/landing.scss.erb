body {
  background: $background;
}

// Header

header {
  margin-bottom: 25px;
}

nav {
  ul { 
    float: right; 
    list-style: none;
    margin: 0;
  }

  li { 
    float: right;
    padding: 10px;
  }

  a {
    color: $grey;
  }
}

#big-nav { display: none; }
#baby-nav {
  display: none;
  position: absolute;
  right: 0px;
  top: 2rem;
}

.hamburger {
  float: right;
  display: inline;
  color: $grey;
}

#logo {
  font-weight: 400;
  display: inline;
  float: left;
}

// Above the fold

#hero-wrapper {
  max-width: 100%;
  img { max-width: 100%; }
}

.beta-form {
  margin: 30px 0 15px 0;
  
  input {
    height: 3.2625rem;
  }
} 

#title-row {
  margin-bottom: 30px;
}

#headline {
  font-size: 3.7rem;
  line-height: 1.2;
}

.section-header {
  margin-bottom: 40px;
}

#hero-image { margin-bottom: 60px; } 

.quote-divider {
  display: none;
  background: $teal;

  blockquote {
    border: none;
    margin-top: 50px;
    margin-bottom: 30px;

    cite {
      float: right;
      color: $light-grey;
    }
  }

  h3 {
    font-family: $primary_sans, sans-serif;
    color: #fff;
  }
}

// How It Works

#how-it-works {
  padding: 40px 0;
}

#benefit-list {
  margin-bottom: 30px;
}

.benefit {
  margin-bottom: 30px;

  .how-header {
    margin-bottom: 0;
    font-family: $primary_sans, sans-serif;
    color: $dark-grey;
  }

  i {
    font-size: 2.2rem;
    vertical-align: middle;
    margin-right: 0.3rem;
  }
}

.cta-form {
  h3 {
    margin-bottom: 20px; 
  }
  input {
    height: 3.83897rem;
  }
}

footer {
  ul { list-style: none; }
  a { color: $grey; }
}


.disclaimer {
  font-size: .8rem;
  color: $light-grey;
  font-style: italic;
}

@media only screen and (min-width: 40.063em) {
  .quote-divider { display: none; }
  #above-fold { margin-bottom: 0; }
  #big-nav { display: block; }
  .hamburger { display: none; }
  .section-header { margin-bottom: 50px; }
  #how-it-works { padding: 50px 0; }
  #benefit-list { margin-bottom: 40px; }
}

@media only screen and (min-width: 64.063em) {
  #headline {
    font-size: 3.23rem;
    line-height: 1.4;
  }
  #hero-image { margin-bottom: 0; }
  .quote-divider { display: block; }
  #above-fold { margin-bottom: 80px; }
}

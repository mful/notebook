body {
  background: $background;
}

// Header

header {
  margin-bottom: 2.31rem;
}

nav {
  ul { 
    float: right; 
    list-style: none;
    margin: 0;
  }

  li { 
    float: right;
    padding: 10px;
  }

  a {
    color: $grey;
  }
}

#big-nav { display: none; }
#baby-nav {
  display: none;
  position: absolute;
  right: 0px;
  top: 2rem;
}

.hamburger {
  float: right;
  display: inline;
  color: $grey;
}

#logo {
  font-weight: 400;
  display: inline;
  float: left;
  color: $dark-grey;
}

.cta-header {
  color: $dark-grey;
}

input.input-username {
  display: none;
}

// Above the fold

#hero-wrapper {
  max-width: 100%;
  img { max-width: 100%; }
}

.beta-form {
  margin: 15px 0 15px 0;
  
  input {
    height: 3.2625rem;
  }
} 

#title-row {
  margin-bottom: 1.16rem;
}

#headline {
  font-size: 3.08rem;
  line-height: 1.2;
  margin-bottom: 1rem;
}

/* keyframes #anim_slides */
@-webkit-keyframes anim_slides {
  0% {
    opacity:0;
  }
  6% {
    opacity:1;
  }
  13% {
    opacity:1;
  }
  17% {
    opacity:0;
  }
  100% {
    opacity:0;
  }
}
@-moz-keyframes anim_slides {
  0% {
    opacity:0;
  }
  6% {
    opacity:1;
  }
  13% {
    opacity:1;
  }
  17% {
    opacity:0;
  }
  100% {
    opacity:0;
  }
}

.slides {
  overflow:hidden;
  position:relative;
  font-family: $primary_serif;

  ul {
    display: inline-block;
    margin: 0;
    font-size: 1.6875rem;
    height: 7.1109rem;
    width: 100%;
    list-style:none;
    position:relative;

    li {
      opacity:0;
      position:absolute;
      top:0;
      left: 0;
      text-align: left;
      width: 100%;
      line-height: 1.4;

      /* css3 animation */
      -webkit-animation-name: anim_slides;
      -webkit-animation-duration: 36.0s;
      -webkit-animation-timing-function: linear;
      -webkit-animation-iteration-count: infinite;

      -moz-animation-name: anim_slides;
      -moz-animation-duration: 36.0s;
      -moz-animation-timing-function: linear;
      -moz-animation-iteration-count: infinite;
    }

    li:nth-child(2) {
      -webkit-animation-delay: 6.0s;
      -moz-animation-delay: 6.0s;
    }

    li:nth-child(3) {
      -webkit-animation-delay: 12.0s;
      -moz-animation-delay: 12.0s;
    }

    li:nth-child(4) {
      -webkit-animation-delay: 18.0s;
      -moz-animation-delay: 18.0s;
    }

    li:nth-child(5) {
      -webkit-animation-delay: 24.0s;
      -moz-animation-delay: 24.0s;
    }

    li:nth-child(6) {
      -webkit-animation-delay: 30.0s;
      -moz-animation-delay: 30.0s;
    }
  }
}

.section-header {
  margin-bottom: 40px;
}

#hero-image { margin-bottom: 60px; } 

.quote-divider {
  display: none;
  background: $teal;

  blockquote {
    border: none;
    margin-top: 50px;
    margin-bottom: 30px;

    cite {
      float: right;
      color: $light-grey;
    }
  }

  h3 {
    font-family: $primary_sans, sans-serif;
    color: #fff;
  }
}

// How It Works

#how-it-works {
  padding: 40px 0;
}

#benefit-list {
  margin-bottom: 30px;
}

.benefit {
  margin-bottom: 30px;

  .how-header {
    margin-bottom: 0;
    font-family: $primary_sans, sans-serif;
    color: $dark-grey;
  }

  i {
    font-size: 2.2rem;
    vertical-align: middle;
    margin-right: 0.3rem;
  }
}

.cta-form {
  h3 {
    margin-bottom: 20px; 
  }
  input {
    height: 3.83897rem;
  }
}

footer {
  ul { list-style: none; }
  a { color: $grey; }
}


.disclaimer {
  font-size: .8rem;
  color: $grey;
  font-style: italic;
}

@media only screen and (min-width: 40.063em) {
  .quote-divider { display: none; }
  #above-fold { margin-bottom: 0; }
  #big-nav { display: block; }
  .hamburger { display: none; }
  .section-header { margin-bottom: 50px; }
  #how-it-works { padding: 50px 0; }
  #benefit-list { margin-bottom: 40px; }
  #title-row { 
    line-height: 1.4;
    text-align: center; 
  }
  #headline { font-size: 3.8rem; }
  .slides ul { 
    height: 4.7406rem;
    li { text-align: center; }
  }
}

@media only screen and (min-width: 64.063em) {
  #hero-image { margin-bottom: 0; }
  .quote-divider { display: block; }
  #above-fold { margin-bottom: 80px; }
  .slides ul { height: 2.3703rem;  }
  #title-row {
    margin-bottom: 3.16rem;
  }
}

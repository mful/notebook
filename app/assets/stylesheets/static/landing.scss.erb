$red: #e6484e;
$burgundy: #8a3722;
$coral: #d65535;
$blue: #518aac;
$light-blue: #589ccf;
$grey: #999;
$light-grey: #e2e2e2;
$dark-grey: #555555;
$charcoal: #343434;
$background2: rgb(250, 248, 247);
$background: rgb(255, 251, 252);
$mint: #3c948b;
$mint2: #94d8c8;
$forest2: #27615B;
$forest: #2D9C97;
$teal2: #5BE0D3;
$teal: #3CCFC8;
$orange: #f99173;

$primary_serif: 'Vollkorn', serif;
$primary_sans: 'Montserrat';

body {
  background: $background;
}

.callout {
  color: $teal;
}

.italic {
  font-style: italic;
}

// Header

header {
  margin-bottom: 25px;
}

nav {
  ul { 
    float: right; 
    list-style: none;
    margin: 0;
  }

  li { 
    float: right;
    padding: 10px;
  }

  a {
    color: $grey;
  }
}

#logo {
  font-weight: 400;
  display: inline;
  float: left;
}

// Above the fold

#hero-wrapper {
  max-width: 100%;
  img { max-width: 100%; }
}

.beta-form {
  margin: 30px 0 15px 0;
  
  input {
    height: 3.2625rem;
  }
} 

.orange-panel {
  background: $orange;
  border: none;

  h3.cta-header {
    color: #fff;
    font-weight: 600;
    font-family: $primary_serif;
    line-height: 1.4;
  }

  p {
    color: #fff;
  }
}

#title-row {
  margin-bottom: 50px;
}

#headline {
  font-size: 2.3125rem;
}

.section-header {
  margin-bottom: 40px;
}

#hero-image { margin-bottom: 60px; } 

.quote-divider {
  display: none;
  background: $teal;

  blockquote {
    border: none;
    margin-top: 50px;
    margin-bottom: 30px;

    cite {
      float: right;
      color: $light-grey;
    }
  }

  h3 {
    font-family: $primary_sans, sans-serif;
    color: #fff;
  }
}

// How It Works

#how-it-works {
  padding: 50px 0;
}

#benefit-list {
  margin-bottom: 20px;
}

.benefit {
  margin-bottom: 30px;

  .how-header {
    margin-bottom: 0;
    font-family: $primary_sans, sans-serif;
    color: $dark-grey;
  }

  i {
    font-size: 2.2rem;
    vertical-align: middle;
  }
}

.cta-form {
  h3 {
    margin-bottom: 20px; 
  }
  input {
    height: 3.83897rem;
  }
}

footer {
  ul { list-style: none; }
  a { color: $grey; }
}

// Utility

.button {
  &.red {
    background: $red;
  }

  &.orange {
    background: $orange;
  }

  &.blue {
    background: $teal;
  }

  &:hover {
    background: $mint;
  }
}

.beta-button {
  width: 100%;
}

.disclaimer {
  font-size: .8rem;
  color: $light-grey;
  font-style: italic;
}

@media only screen and (min-width: 40.063em) {
  .quote-divider { display: none; }
  #above-fold { margin-bottom: 0; }
}

@media only screen and (min-width: 64.063em) {
  #headline { font-size: 3.23rem; }
  #hero-image { margin-bottom: 0; }
  .quote-divider { display: block; }
  #above-fold { margin-bottom: 80px; }
}
